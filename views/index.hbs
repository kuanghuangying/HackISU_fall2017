<div class="protected-page">

  <div class="upload-page">

    <h1>Upload Your Resume Now</h1>

    <form class="box" action="/upload/upload-file-form" enctype="multipart/form-data" method="post" id="theform">

      <div class="file has-name" id="file-chooser-widget">
        <label class="file-label">
          <input class="file-input" id="theinputfield" type="file" name="thefile">
          {{!-- <span class="file-cta">
            <span class="file-icon">
              <i class="fa fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name" id="fn">
            ...
          </span> --}}
        </label>
      </div>

      <p>
        <input class="button" type="submit" value="Send file (submit)" id="theSubmitButton">
        {{!-- <input class="button" type="button" value="Send file (ajax)" id="theAjaxButton"> --}}
      </p>
    </form>

    <article class="message">
      <div class="message-header">
        <p>Want to know the Results?</p>
      </div>
      <div class="message-body">
        <div id="ajaxResponse"></div>
      </div>
    </article>

    <h1>We Turn This... Into That.</h1>
    <div class="row">
      <div class="col-md-6">
        <div class="portfolio-item">
          <a href="#">
            <img class="img-portfolio img-fluid" style="width:80%;height:80%" src="img/resume-design-3.jpg">
          </a>
        </div>
      </div>
      <div class="col-md-6">
        <div class="portfolio-item">
          <a href="#">
            <img class="img-portfolio img-fluid" style="width:75%;height:75%" src="img/elonmusk.jpg">
          </a>
        </div>
      </div>
    </div>

    <p>Total resumes uploaded: {{ numFiles }}</p>

    <ul><br>
      {{#each files}}
      <li>
        <a href="/upload/view/{{ this._id }}">{{ this.filename }}</a>
        -- {{ this.contentType }} {{ this.length }}
      </li>
      {{/each}}
    </ul>

  </div>

</div>
